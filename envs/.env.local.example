# ============================================
# LOCAL Development Environment Configuration
# Copy this file to .env.dev and fill in values
# NEVER commit the real .env.dev file!
# ============================================

# Docker Compose project name (must be unique)
COMPOSE_PROJECT_NAME=my-awesome-app-dev

# Database Configuration
DB_USER=appuser_local
DB_NAME=appdb_local
DB_HOST=localhost
DB_HOSTNAME=db-local
DB_EXTERNAL_PORT=5432

# PgAdmin Configuration
PGADMIN_EMAIL=
PGADMIN_PORT=

PGADMIN_IMAGE=
POSTGRES_IMAGE=

# Security
SECURITY_LEVEL=local
DEBUG=1
