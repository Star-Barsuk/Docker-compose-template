# ============================================
# PRODUCTION Environment Configuration
# Copy this file to .env.prod and fill in values
# NEVER commit the real .env.prod file!
# ============================================

# Docker Compose project name (must be unique)
COMPOSE_PROJECT_NAME=my-awesome-app-prod

# Database Configuration
DB_USER=appuser_prod
DB_NAME=appdb_prod
DB_HOSTNAME=db-prod

# PgAdmin Configuration
PGADMIN_EMAIL=admin@yourdomain.com
PGADMIN_PORT=8081

# Image versions
PGADMIN_IMAGE=dpage/pgadmin4:8.12
POSTGRES_IMAGE=postgres:18.1-bookworm

# Secrets file paths
DB_PASSWORD_FILE=secrets/db_password.txt
PGADMIN_PASSWORD_FILE=secrets/pgadmin_password.txt

# ============================================
# Production-specific variables
# ============================================
# Security
SECURITY_LEVEL=prod
DEBUG=0
RELOAD=0
LOG_LEVEL=WARNING
