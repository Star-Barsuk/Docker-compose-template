# ============================================
# DEVELOPMENT Environment Configuration
# Copy this file to .env.dev and fill in values
# NEVER commit the real .env.dev file!
# ============================================

# Docker Compose project name (must be unique)
COMPOSE_PROJECT_NAME=my-awesome-app-dev

# Application
APP_PORT=8000

# Database Configuration
DB_USER=appuser_dev
DB_NAME=appdb_dev
DB_EXTERNAL_PORT=5432
DB_HOSTNAME=db-dev

# PgAdmin Configuration
PGADMIN_EMAIL=dev@example.com
PGADMIN_PORT=8080

# Image versions
PGADMIN_IMAGE=dpage/pgadmin4:8.12
POSTGRES_IMAGE=postgres:18.1-bookworm

# Secrets file paths
DB_PASSWORD_FILE=secrets/db_password.txt
PGADMIN_PASSWORD_FILE=secrets/pgadmin_password.txt

# Security
SECURITY_LEVEL=dev

# ============================================
# Optional: Application-specific variables
# ============================================
DEBUG=1
LOG_LEVEL=DEBUG
