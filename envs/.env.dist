# =============================================================================
# APPLICATION ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# This file contains ALL possible environment variables for the project.
# Copy this file to envs/.env.{environment} and adjust values as needed.
# NEVER commit actual .env files with real values to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# DOCKER COMPOSE CONFIGURATION
# -----------------------------------------------------------------------------

# Unique project name (used for container/network/volume prefixes)
COMPOSE_PROJECT_NAME=my-awesome-app
COMPOSE_PROFILES=dev-standard

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# -----------------------------------------------------------------------------

# Application metadata
APP_VERSION=0.1.0

# Application ports
APP_PORT_DEV=8000
APP_PORT_PROD=8000

# Application resource limits
APP_CPU_LIMIT=0.2
APP_MEMORY_LIMIT=256M

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------

# Database connection
DB_HOST=db
DB_PORT=5432
DB_NAME=appdb
DB_USER=appuser
DB_POOL_SIZE=10
DB_CONN_TIMEOUT=30

# Database names per environment
DB_NAME_LOCAL=appdb_local
DB_NAME_DEV=appdb_dev
DB_NAME_PROD=appdb_prod
DB_NAME_TEST=appdb_test

# Database users per environment
DB_USER_LOCAL=appuser_local
DB_USER_DEV=appuser_dev
DB_USER_PROD=appuser_prod
DB_USER_TEST=appuser_test

# Database ports
DB_PORT_LOCAL=5432
DB_PORT_DEV=5432

# Database resource limits
DB_CPU_LIMIT=0.3
DB_MEMORY_LIMIT=256M

# PostgreSQL image
POSTGRES_IMAGE=postgres:latest

# -----------------------------------------------------------------------------
# PGADMIN CONFIGURATION
# -----------------------------------------------------------------------------

# PgAdmin image
PGADMIN_IMAGE=dpage/pgadmin4:latest

# PgAdmin email
PGADMIN_EMAIL=admin@yourdomain.com

# PgAdmin ports
PGADMIN_PORT_DEV=8080
PGADMIN_PORT_PROD=8081

# PgAdmin resource limits
PGADMIN_CPU_LIMIT=0.3
PGADMIN_MEMORY_LIMIT=256M

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------

# Secrets file paths (relative to docker/compose/)
DB_PASSWORD_FILE=../secrets/db_password.txt
PGADMIN_PASSWORD_FILE=../secrets/pgadmin_password.txt

# -----------------------------------------------------------------------------
# NETWORK CONFIGURATION
# -----------------------------------------------------------------------------

# Docker network driver
COMPOSE_NETWORK_DRIVER=bridge

# Internal network configuration
NETWORK_SUBNET=10.5.0.0/16
NETWORK_IP_RANGE=10.5.0.0/24
NETWORK_GATEWAY=10.5.0.1

# -----------------------------------------------------------------------------
# VOLUME CONFIGURATION
# -----------------------------------------------------------------------------

# Volume name prefix
COMPOSE_VOLUME_PREFIX=${COMPOSE_PROJECT_NAME}

# Volume data directory (for bind mounts)
VOLUME_DATA_DIR=./data

# -----------------------------------------------------------------------------
# HEALTH CHECK CONFIGURATION
# -----------------------------------------------------------------------------

# Health check intervals
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=40s

# -----------------------------------------------------------------------------
# NOTES
# -----------------------------------------------------------------------------
# 1. All passwords and secrets should be stored in docker/secrets/ directory
# 2. Never commit secret files to version control
# 3. Generate secrets using: openssl rand -base64 32 > docker/secrets/[secret_name].txt
# 4. Use different passwords for different environments
# 5. Review all security settings before production deployment
